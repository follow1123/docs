{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.astro",
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@docs/*": ["src/content/docs/*"],
      "@libs/*": ["src/libs/*"]
    }
  }
}
